<resources>

	<!-- Attributes for RecyclerView item space decoration. -->
	<declare-styleable name="Recycler.ItemDecoration.Space">
		<!--
			Amount of space by which to offset an item at the start in horizontal direction
			with respect to layout direction of the parent RecyclerView.
		-->
		<attr name="recyclerItemSpacingHorizontalStart" format="dimension"/>
		<!--
			Amount of space by which to offset an item at the end in horizontal direction
			with respect to layout direction of the parent RecyclerView.
		-->
		<attr name="recyclerItemSpacingHorizontalEnd" format="dimension"/>
		<!-- Amount of space by which to offset an item at the start in vertical direction. -->
		<attr name="recyclerItemSpacingVerticalStart" format="dimension"/>
		<!-- Amount of space by which to offset an item at the end in vertical direction. -->
		<attr name="recyclerItemSpacingVerticalEnd" format="dimension"/>
		<!-- Indicates whether the space decoration should be skipped for the first item or not. -->
		<attr name="recyclerItemSpacingSkipFirst" format="boolean"/>
		<!-- Indicates whether the space decoration should be skipped for the last item or not. -->
		<attr name="recyclerItemSpacingSkipLast" format="boolean"/>
	</declare-styleable>
</resources>