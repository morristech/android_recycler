<resources>

	<!-- Attributes for RecyclerView item divider decoration. -->
	<declare-styleable name="Recycler.ItemDecoration.Divider">
		<!-- Orientation in which should be the divider between items drawn. -->
		<attr name="recyclerDividerOrientation">
			<!-- Draw divider between items horizontally. -->
			<enum name="horizontal" value="0x00"/>
			<!-- Draw divider between items vertically. -->
			<enum name="vertical" value="0x01"/>
		</attr>
		<!-- Drawable used to draw divider between items. -->
		<attr name="recyclerDivider" format="reference|color"/>
		<!-- Thickness in which should be the divider drawable drawn. -->
		<attr name="recyclerDividerThickness" format="dimension"/>
		<!--
			Amount by which to offset the divider at the start with respect to layout direction of
			the parent RecyclerView and also with respect to the orientation specified for decoration.
		-->
		<attr name="recyclerDividerOffsetStart" format="dimension"/>
		<!--
			Amount by which to offset the divider at the end with respect to layout direction of
			the parent RecyclerView and also with respect to the orientation specified for decoration.
		-->
		<attr name="recyclerDividerOffsetEnd" format="dimension"/>
		<!-- Indicates whether the divider decoration should be skipped for the first item or not. -->
		<attr name="recyclerDividerSkipFirst" format="boolean"/>
		<!-- Indicates whether the divider decoration should be skipped for the last item or not. -->
		<attr name="recyclerDividerSkipLast" format="boolean"/>
	</declare-styleable>>
</resources>