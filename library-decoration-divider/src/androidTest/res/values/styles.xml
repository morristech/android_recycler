		<item name="recyclerDivider">@android:color/darker_gray</item>
		<item name="recyclerDividerThickness">2px</item>
		<item name="recyclerDividerOffsetStart">4px</item>
		<item name="recyclerDividerOffsetEnd">8px</item>
